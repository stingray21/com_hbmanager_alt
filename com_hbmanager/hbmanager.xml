<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: hbmanager.xml 51 2013-03-19 16:34:21Z stingray21 $ -->
<extension type="component" version="2.5.0" method="upgrade">

	<name>HB Manager</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>March 19 2013</creationDate>
	<author>Jochen Stehle</author>
	<authorEmail>stingray21@gmx.de</authorEmail>
	<authorUrl></authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.1.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>Component to manage the data gathered from HVW online</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	
	<update> <!-- Runs on update; New in 2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>hbmanager.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>language</folder>
	</files>

	<media destination="com_hbmanager" folder="media">
		<filename>index.html</filename>
		<folder>css</folder>
		<folder>images</folder>
	</media>
	
	<administration>
		<!-- Administration Menu Section -->
		<menu img="../media/com_hbmanager/images/hblogo-16x16.png">COM_HBMANAGER_MENU</menu>
			<!-- Administration Main File Copy Section -->
			<!-- Note the folder attribute: This attribute describes the folder
				to copy FROM in the package to install therefore files copied
				in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>controller.php</filename>
			<filename>config.xml</filename>
			<filename>hbmanager.php</filename>
			<!-- views files section -->
			<folder>views</folder>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- SQL files section -->
			<folder>sql</folder>
		</files>
		
		<languages folder="admin">
			<language tag="de-DE">language/de-DE/de-DE.com_hbmanager.ini</language>
			<language tag="de-DE">language/de-DE/de-DE.com_hbmanager.sys.ini</language>
		</languages>
	</administration>

</extension>

